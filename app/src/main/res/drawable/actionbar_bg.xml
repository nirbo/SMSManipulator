<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape>
            <solid android:color="@color/Black" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/AlphaBlack" />

            <corners
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp"
                android:topLeftRadius="4dp"
                android:topRightRadius="4dp">
            </corners>
        </shape>
    </item>
    <item android:bottom="1dp">
        <shape>
            <solid android:color="@color/teal_darkest" />

            <corners
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp"
                android:topLeftRadius="4dp"
                android:topRightRadius="4dp">
            </corners>
        </shape>
    </item>

    <item android:bottom="1dp">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/AlphaBlack" />

                    <corners
                        android:bottomLeftRadius="0dp"
                        android:bottomRightRadius="0dp"
                        android:topLeftRadius="4dp"
                        android:topRightRadius="4dp">
                    </corners>
                </shape>
            </item>
            <item android:top="1dp">
                <shape>
                    <solid android:color="@color/teal_normal" />

                    <corners
                        android:bottomLeftRadius="0dp"
                        android:bottomRightRadius="0dp"
                        android:topLeftRadius="4dp"
                        android:topRightRadius="4dp">
                    </corners>
                </shape>
            </item>
        </layer-list>
    </item>

</layer-list>